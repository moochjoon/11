# Application Settings
APP_NAME=Namak
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost:8000
APP_KEY=base64:your-secret-key-here

# Database Configuration
DB_DRIVER=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=namak
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Encryption & Security
ENCRYPTION_KEY=base64:your-encryption-key-here
ENCRYPTION_CIPHER=AES-256-GCM
JWT_SECRET=your-jwt-secret-key-here
JWT_TTL=86400
API_SECRET=your-api-secret-key-here

# Timezone & Language
TIMEZONE=Asia/Tehran
DEFAULT_LANGUAGE=en
RTL_ENABLED=false

# CORS Configuration
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# Admin Panel
ADMIN_PATH=/admin-secret-panel-12345
ADMIN_ENABLED=true

# Storage Configuration
STORAGE_PATH=/storage
MAX_FILE_SIZE=52428800
MAX_AVATAR_SIZE=5242880
MAX_VIDEO_SIZE=104857600
UPLOAD_PATH=uploads

# Message Configuration
EPHEMERAL_TTL=86400
MESSAGE_BATCH_SIZE=50
POLLING_INTERVAL=2000
POLLING_TIMEOUT=30000

# Session Configuration
SESSION_LIFETIME=604800
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Strict

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# Email Configuration (Optional)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@namak.local
MAIL_FROM_NAME=Namak

# Logging
LOG_LEVEL=info
LOG_PATH=storage/logs

# Cache Configuration
CACHE_DRIVER=file
CACHE_PREFIX=namak_
CACHE_TTL=3600

# Development
DEBUG_MODE=false
DISPLAY_ERRORS=false
QUERY_LOG=false
