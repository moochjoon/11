# ── Server ──────────────────────────────────────────
NODE_ENV=development
PORT=4000
HOST=0.0.0.0

# ── Database ────────────────────────────────────────
DB_HOST=localhost
DB_PORT=5432
DB_NAME=namak_db
DB_USER=namak_user
DB_PASS=your_strong_password
DB_POOL_MAX=20
DB_POOL_IDLE=10000

# ── Redis ───────────────────────────────────────────
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=namak:

# ── JWT ─────────────────────────────────────────────
JWT_SECRET=change_this_to_a_very_long_random_secret_key
JWT_EXPIRES_IN=30d
JWT_REFRESH_SECRET=another_very_long_random_secret_key
JWT_REFRESH_EXPIRES_IN=90d

# ── Files ───────────────────────────────────────────
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm,audio/mpeg,audio/ogg,application/pdf

# ── VAPID (Push) ────────────────────────────────────
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_SUBJECT=mailto:admin@namak.ir

# ── CORS ────────────────────────────────────────────
CORS_ORIGIN=http://localhost:3000,https://namak.ir

# ── Rate Limit ──────────────────────────────────────
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=200

# ── Logging ─────────────────────────────────────────
LOG_LEVEL=info

